<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_cep_detalhes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="32673-136"/>

    <TextView
        android:id="@+id/txt_logradouro_detalhes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rua Palma de Santa Rita"/>

    <TextView
        android:id="@+id/txt_complemento_detalhes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/txt_bairro_detalhes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jardim Alterosas"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_cidade_detalhes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Betim"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" - "/>

        <TextView
            android:id="@+id/txt_uf_detalhes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MG"/>

    </LinearLayout>


</LinearLayout>